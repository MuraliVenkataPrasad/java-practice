import java.io.FileWriter;
import java.io.IOException;

public class WriteFile {
	public static void main(String[] args) {
		try {
			FileWriter file =new FileWriter("Teachers..txt");
			file.write("this is the having the information of students");
			file.write("name: kiran,age:23");
			file.write("name:murali,age:22");
			file.close();
			System.out.println("some information is written in the file");
		}
		catch(IOException e){
			System.out.println("eRROR--");
			e.printStackTrace();
		}
	}
}

